<% include ../partials/header %>
<script language="JavaScript">
  function chkConfirm(){
    if(confirm('Do you want to delete product')==true){
      window.location = "/user_delete/<%= user.id %>";
      
   }else{
    return(null);
  }
}
</script>
<form action ="/user/update" method = "post">
<div class="jumbotron">
<h1 class="display-4">USERS</h1>
<div class="form-group">
  <label for="">ID</label>
  <input type="number"
    class="form-control" value="<%= user.id %>" name="id" id="" aria-describedby="helpId" placeholder="">
  <small id="helpId" class="form-text text-muted">User Id</small>
</div>
<div class="form-group">
  <label for="">Email</label>
  <input type="email"
    class="form-control" value="<%= user.email %>" name="email" id="" aria-describedby="helpId" placeholder="">
  <small id="helpId" class="form-text text-muted">User Email</small>
</div>
<div class="form-group">
  <label for="">Password</label>
  <input type="password"
    class="form-control" value="<%= user.password %>" name="password" id="" aria-describedby="helpId" placeholder="">
  <small id="helpId" class="form-text text-muted">User Password</small>
</div>

<div class="form-group">
  <label for="">Creat At</label>
  <input type="text"
    class="form-control" value="<%= time %>" name="creat at" id="datepicker" width="276" aria-describedby="helpId" placeholder="" disabled>
  <small id="helpId" class="form-text text-muted">Creat At</small>
  <script>
      $('#datepicker').datepicker({
      showOtherMonths: true
  });
  </script>
</div>


<a name="" id="" class="btn btn-secondary" href="/users" role="button">CANCLE</a>
<button type="submit" class="btn btn-success">SAVE</button>
<a name="btnConfirm" value="Confirm" OnClick="chkConfirm()" class="btn btn-danger" href="#" role="button">DELETE</a>


</div>
</form>


<% include ../partials/footer %>